<grammar version="1.0" xml:lang="fr-FR" mode="voice" root="ruleImperiRemote" xmlns="http://www.w3.org/2001/06/grammar" tag-format="semantics/1.0">
   <rule id="ruleImperiRemote" scope="public">
      <example>Sarah affiche Impéri Home</example>
      <tag>out.action=new Object(); </tag>

<!--  Fichier XML du Plugin ImperiRemote pour SARAH -->

      <item>Sarah
         <one-of>
            <item>Affiche</item>
            <item>Mets</item>
            <item>Montre</item>
         </one-of>
         <one-of>
            <item>Le</item>
            <item>La</item>
            <item>Les</item>
         </one-of>
         <one-of>
            <item>Caméra
               <tag> out.action.cmd="dashboard/gotopage¤pageIdx¤1"; out.action.ttsAction="La caméra est affiché"; </tag>
            </item>
            <item>Température
               <tag> out.action.cmd="dashboard/gotopage¤pageIdx¤2"; out.action.ttsAction="La température est affichée"; </tag>
            </item>
            <item>Consommations électrique
               <tag> out.action.cmd="dashboard/gotopage¤pageIdx¤3"; out.action.ttsAction="La page 3 est affichée"; </tag>
            </item>
         </one-of>
      </item>
      <tag>out.action._attributes.uri="http://127.0.0.1:8080/sarah/ImperiRemote";</tag>
   </rule>
</grammar>

